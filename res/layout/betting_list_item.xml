<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
	<TableLayout
	    android:id="@+id/tbInfo"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#FFF"
	    android:paddingTop ="5dip"
	    android:paddingBottom ="5dip">
		<TableRow	
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent">
		   	<TextView
		        android:id="@+id/txtDate"
		        android:text="20-12"
		        android:textColor="#000"
		        android:layout_width="55dip"
		        android:paddingRight="10dip"
		        android:gravity="center"/>
		    <TextView
		        android:id="@+id/txtHome"
		        android:text="Manchester"
		        android:layout_width="0dip"
		        android:layout_weight="1" 
		        android:textColor="#000"
		        />
		    <TextView
		        android:id="@+id/txtHomeGoals"
		        android:text="1"
		        android:layout_width="60dip"
		        android:textColor="#23B0BA"
		        android:gravity="right"
		        android:paddingRight="10dip"/>
		</TableRow>
		<TableRow	
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent">
		    <TextView
		        android:id="@+id/txtTime"
		        android:text="20:30"
		        android:textColor="#000"
		        android:layout_width="55dip"
		        android:paddingRight="10dip"
		        android:gravity="center"/>
		    <TextView
		        android:id="@+id/txtAway"
		        android:text="Chelsea"
		        android:layout_width="0dip"
		        android:layout_weight="1" 
		        android:textColor="#000"
		        />	 	    
		    <TextView
		        android:id="@+id/txtAwayGoals"
		        android:text="1"
		        android:layout_width="60dip"
		        android:textColor="#23B0BA"
		        android:gravity="right"
		        android:paddingRight="10dip"/>
		</TableRow>	
		
			
	</TableLayout>

	<LinearLayout	
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:layout_below="@id/tbInfo"
	    android:orientation="horizontal"
	    android:background="#ddd"
		android:paddingTop ="2dip"
	    android:paddingBottom ="2dip">
	    <TextView
	        android:id="@+id/txtBetType"
	        android:text="Handi"
	        android:textColor="#000"
	        android:layout_width="70dip"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:paddingRight="10dip"/>
	    <TextView
	        android:id="@+id/txtBetTo"
	        android:text="Home"
	        android:layout_width="60dip"
	        android:layout_height="wrap_content"
	        android:textColor="#000"
	        android:textStyle="bold"/>	 	    
	    <TextView
	        android:id="@+id/txtCash"
	        android:text="100"
	        android:layout_width="75dip"
	        android:textColor="#23B0BA"
	        android:paddingRight="10dip"
	        android:textStyle="bold"
	        android:layout_height="wrap_content"
	        android:gravity="center"/>
	    
	    <TextView
	        android:id="@+id/txtGetBack"
	        android:text="W 12344"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:textColor="#23B0BA"
	        android:gravity="right"
	        android:textStyle="bold"
	        android:layout_height="wrap_content"/>
	</LinearLayout>	
</RelativeLayout>